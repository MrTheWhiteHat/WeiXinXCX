/**index.wxss**/
page {
  display: flex;
  flex-flow: column wrap;
  align-items: center;
}

/*轮播图*/
.swiper {
  position: absolute;
  left: 0px;
  right: 0px;
  margin: auto;
  height: 140px;
}

.slide-image {
  width: 100%;
  height: 140px;
}

/*排行榜*/
.rankingList {
  display: flex;
  flex-flow: column wrap;
  margin-top: 160px;
  margin-bottom: 32px;
  width: 90%;
  font-family: "STXingKai";
  color: #d81e06;
  background-color: rgba(0, 0, 0, .1);
  box-shadow: 0 0 6px 3px rgba(0, 0, 0, .2);
  border-radius: 8px;
}

/*排行榜标题*/
.flex.top {
  display: flex;
  flex-flow: row wrap;
}

.flex.top > text {
  align-self: center;
  margin-left: 8px;
}

/*排行榜标题*/
.flex.no {
  display: flex;
  flex-flow: row wrap;
  font-size: 20px;
  background-color: rgba(255, 255, 255, .5);
  color: #ff8800;
}

.flex.no.no1 {color: #d81e06;}
.flex.no.no2 {color: #ff0000;}
.flex.no.no3 {color: #ff5e00;}

.myImage {
  margin: 16px;
  width: 24px; 
  height: 24px;
  border: 2px solid #fff; 
  border-radius: 25%;
}

.name {
  align-self: center;
  margin-left: 8px;   
}

.like {
  align-self: center;
  margin-right: 32px;
  width: 16px; 
  height: 16px;
}

.likeData {
  align-self: center;
  margin: auto 8px auto auto;
}

.rankingList.no2 {
  margin-top: 32px;
}