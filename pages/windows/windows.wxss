/* windows.wxss */
.canteen-classify {
  display: flex;
  flex-direction: column;
  margin-top: 120rpx;
  position: absolute;
  left: 0px;
  top: 150rpx;
  margin: auto;    
}

.canteen {
  width: 180rpx;
  height: 100rpx;
  background-color: #ffffff;
  color: #484848;
}

.canteen:hover {
  background-color: rgba(0, 0, 0, 0.1);
  color: green;
}

.canteenTop {
  width: 180rpx;
  height: 100rpx;
  background-color: rgba(0, 0, 0, 0.1);
  color: #484848;
  border-top-right-radius: 15rpx;
  border-bottom-style: solid;
  border-bottom-color: #ffffff;
}

.canteenBottom {
  border-bottom-right-radius: 15rpx;
}

.words {
  position: relative;
  top: 30rpx;
  margin: auto;
}

.topBar {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  position: absolute;
  top: 0px;
  margin: auto;
  background-color: rgba(0,0,0,0.5);
}

/*search module*/
.searchBar {
  display: flex;
  flex-direction: row;
  width: 75%;
  height: 60rpx;
  background-color: rgba(255,255,255,0.9);
  border-radius: 12rpx;
  position: absolute;
  top: 20rpx;
  left: 12.5%;
  margin: auto;
  font-size: 18px;
}

.searchBar-image {
  height: 60rpx;
  width: 60rpx;
  position: absolute;
  left: 0px;
  margin: auto;
  z-index: 2;
}

input {
  height: 60rpx;
  width: 88%;
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 66rpx;
  margin: auto;
  text-align: left;
  font-size: 15px;
  border: 0px;
}

/*scan module*/
.scan {
  display: flex;
  flex-direction: column;
  width: 75rpx;
  height: 100%;
  position: absolute;
  top: 15rpx;
  left: 9rpx;
  margin: auto;
}

.scan-image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}

.scan-words {
  font-size: 8px;
  color: #ffffff;
  margin-left: 0px;
}
